<h1 class="text-center">Eat-Da-Burger!</h1>

<main>
    <div class="container">
        <div class="row">
            <div class="col md-6">
                <h1>Burgers to be devoured</h1>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div class='burgerToBeEaten'>
                            <div>
                                {{id}}.
                                {{burger_name}}
                                <button class="change-status" data-id="{{id}}">Devour it!</button>
                            </div>

                        </div>
                    {{/unless}}
                {{/each}}
            </div>

            <div class="col md-6">
                <h1>Burgers not yet devoured</h1>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class='burgerEaten'>
                            <div>
                                {{this.id}}.
                                {{this.burger_name}}
                            </div>
                        </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>

        <div class="row my-5">
            <div class="col text-center">
                <form class="create-form justify-content-center">

                    <div class="form-group">
                        <input type="text" id="bu" name="burger_name" placeholder="Add New Burger" class="form-control
                         form-control-lg">
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                </form>
            </div>
        </div>


    </div>
</main>

